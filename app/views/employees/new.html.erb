<% provide(:title, "Create New Employee") %>
<%= form_for(@employee) do |f| %>
     <div class="row">
 <header class="panel-heading">
                            <h3>New Employee</h3>
                         </header>
                     <section class="panel">
                        
                         <div class="panel-body">
                             <div class="form">
                                 <form class="form-validate form-horizontal " id="register_form" method="get" action="">
                                     <div class="form-group ">
                                         <%= f.label :name, class: "control-label col-lg-2"%><span class="required"></span>
                                         <div class="col-lg-10">
                                             <%= f.text_field :name, class: "form-control" %>
                                         </div>
                                     </div>
                                       <div class="form-group ">
                                         <%= f.label :username, class: "control-label col-lg-2"%><span class="required"></span>
                                         <div class="col-lg-10">
                                             <%= f.text_field :username, class: "form-control" %>
                                         </div>
                                     </div>
                                     <div class="form-group ">
                                         <%= f.label :password, class: "control-label col-lg-2"%><span class="required"></span>
                                         <div class="col-lg-10">
                                             <%= f.password_field :password, class: "form-control"%>
                                         </div>
                                     </div>
                                     <div class="form-group ">
                                         <%= f.label :password_confirmation, "Confirmation", class: "control-label col-lg-2" %><span class="required"></span>
                                         <div class="col-lg-10">
                                             <%= f.password_field :password_confirmation, class: 'form-control' %>
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <div class="col-lg-offset-2 col-lg-10">
                                             <!--<button class="btn btn-primary" type="submit">Create Employee</button>-->
                                             <%= f.submit "Create employee", class: "btn btn-primary" %>
                                             <% end %>
                                         </div>
                                     </div>
                                 </form>
                             </div>
                         </div>
                     </section>
   